    "lint-staged": "^12.3.8",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "semantic-release-cli": "^5.4.4"
  }
}
